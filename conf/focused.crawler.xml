	<visualindex>
        <learningfiles>./</learningfiles>
        <hostname>xxx.xxx.xxx.xxx:xxxx</<hostname>
        <collection>media</collection>
    </visualindex>
    
    <textindex>
        <host>http://xxx.xxx.xxx.xxx:8080/solr</host>
