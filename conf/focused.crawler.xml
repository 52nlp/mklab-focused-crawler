        <webPagesChannel>webpages</webPagesChannel>
        <mediaItemsChannel>media</mediaItemsChannel>
    </redis>

    <mongodb>
        <hostname>xxx.xxx.xxx.xxx</hostname>
        <webPagesDB>webpages.db</webPagesDB>
        <webpagesCollection>webpages.collection</webpagesCollection>
        <mediaItemsDB>mediaitems.db</mediaItemsDB>
        <mediaItemsCollection>mediaitems.collection</mediaItemsCollection>
        <clustersDB>clusters.db</clustersDB>
        <clustersCollection>clusters.collection</clustersCollection>
